        // --- LÓGICA DO FORMULÁRIO ---
        let currentStep = 'hero';
        let questionnaireStructure = []; // Será montado dinamicamente
        let totalSteps = 0;
        let formData = {};

        document.addEventListener('DOMContentLoaded', () => {
            // A página inicial (hero) já é renderizada estaticamente
        });

        // Função para configurar o questionário baseado na escolha do usuário
        function setupRegistration(isShort) {
            // Monta a estrutura: Cadastro (Curto ou Longo) + Infraestrutura
            if (isShort) {
                questionnaireStructure = [registrationShort, ...infrastructureQuestions];
            } else {
                questionnaireStructure = [registrationLong, ...infrastructureQuestions];
            }

            totalSteps = questionnaireStructure.length;

            // Vai para a primeira etapa (que agora é o cadastro adequado)
            goToStep(1);
        }

        function renderStep(step) {
            const pageData = questionnaireStructure[step - 1];
            const container = document.getElementById(`page-${step}`);
            // Se o container não existir (porque mudamos dinamicamente o número de passos), tenta criar ou usa um genérico
            // Como criamos até page-9 no HTML, deve cobrir. Se precisar de mais, o script deveria criar dinamicamente, mas vamos assumir que 9 é suficiente.

            if (!container) {
                console.error(`Container page-${step} não encontrado.`);
                return;
            }

            let content = `
                <div class="container">
                    <div class="form-container">
                        <div class="progress-header">
                            <div class="progress-info">
                                <span>Etapa ${step} de ${totalSteps}</span>
                                <span>${pageData.title}</span>
                            </div>
                            <div class="progress-bar-container">
                                <div class="progress-bar" style="width: ${(step / totalSteps) * 100}%"></div>
                            </div>
                        </div>
                        <form id="form-step-${step}">
                            ${pageData.sections.map(section => `
                                <div class="form-section" id="${section.id}">
                                    <h2>${section.title}</h2>
                                    <div class="form-grid">
                                        ${section.questions.map(q => renderQuestion(q)).join('')}
                                    </div>
                                </div>
                            `).join('')}
                            <div class="form-navigation">
                                ${step > 1 ? `<button type="button" class="btn btn--outline" onclick="goToStep(${step - 1})"><i class="fas fa-arrow-left"></i> Anterior</button>` : `<button type="button" class="btn btn--outline" onclick="goToStep('pre-check')"><i class="fas fa-arrow-left"></i> Voltar</button>`}
                                ${step < totalSteps ? `<button type="button" class="btn btn--primary btn-next" onclick="validateAndGoToStep(${step + 1})">Próximo <i class="fas fa-arrow-right"></i></button>` : `<button type="button" class="btn btn--primary btn-next" onclick="submitForm()">Enviar Diagnóstico <i class="fas fa-paper-plane"></i></button>`}
                            </div>
                        </form>
                    </div>
                </div>
            `;
            container.innerHTML = content;
            restoreFormData(step);
            setupOtherInputListeners(step);
        }

        function renderQuestion(q) {
            const requiredStar = q.required ? '<span class="required-star">*</span>' : '';
            const gridClass = q.grid === 'full' ? 'form-group--full' : '';
            let questionHtml = `<div class="form-group ${gridClass}" data-question-id="${q.id}">`;
            questionHtml += `<label class="form-label">${q.label} ${requiredStar}</label>`;

            switch (q.type) {
                case 'text':
                case 'email':
                case 'tel':
                case 'date':
                case 'number': // Adicionado suporte a number
                    questionHtml += `<input type="${q.type}" id="${q.id}" name="${q.id}" class="form-control" ${q.placeholder ? `placeholder="${q.placeholder}"` : ''} ${q.required ? 'required' : ''} ${q.type === 'number' ? 'step="0.1" min="0"' : ''}>`;
                    break;
                case 'textarea':
                    questionHtml += `<textarea id="${q.id}" name="${q.id}" class="form-control" ${q.required ? 'required' : ''}></textarea>`;
                    break;
                case 'radio':
                    questionHtml += `<div class="options-group">`;
                    q.options.forEach((opt, index) => {
                        const optionId = `${q.id}-${index}`;
                        questionHtml += `
                            <div class="radio-option">
                                <label for="${optionId}">
                                    <input type="radio" id="${optionId}" name="${q.id}" value="${opt}" ${q.required ? 'required' : ''}>
                                    <span>${opt}</span>
                                </label>
                            </div>
                        `;
                    });
                    questionHtml += `</div>`;
                    if (q.hasOther) {
                        questionHtml += `<div class="other-input-container" id="${q.id}-other-container"><input type="text" class="form-control" placeholder="Por favor, especifique." id="${q.id}-other-text"></div>`;
                    }
                    break;
                case 'checkbox':
                    questionHtml += `<div class="options-group">`;
                    q.options.forEach((opt, index) => {
                        const optionId = `${q.id}-${index}`;
                        questionHtml += `
                            <div class="checkbox-option">
                                <label for="${optionId}">
                                    <input type="checkbox" id="${optionId}" name="${q.id}" value="${opt}" data-max-selection="${q.maxSelection || ''}" data-must-check-all="${q.mustCheckAll || ''}">
                                    <span>${opt}</span>
                                </label>
                            </div>
                        `;
                    });
                    questionHtml += `</div>`;
                    if (q.hasOther) {
                        questionHtml += `<div class="other-input-container" id="${q.id}-other-container"><input type="text" class="form-control" placeholder="Por favor, especifique." id="${q.id}-other-text"></div>`;
                    }
                    break;
            }
            questionHtml += `</div>`;
            return questionHtml;
        }

        function goToStep(stepId) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            const targetPage = document.getElementById(`page-${stepId}`);

            if (targetPage) {
                currentStep = stepId;

                // Se for um passo numérico (questões), renderiza
                if (typeof stepId === 'number') {
                    // Limpa conteúdo anterior para forçar re-render (útil se mudou de curto pra longo)
                    // Mas para manter estado, melhor só renderizar se estiver vazio OU se precisarmos atualizar a barra de progresso
                    renderStep(stepId);
                }

                targetPage.classList.add('active');
                window.scrollTo(0, 0);
            }
        }

        function validateAndGoToStep(nextStep) {
            if (validateStep(currentStep)) {
                saveFormData(currentStep);
                goToStep(nextStep);
            } else {
                showNotification('Por favor, preencha todos os campos obrigatórios (*).', 'error');
            }
        }

        function validateStep(step) {
            const form = document.getElementById(`form-step-${step}`);
            if (!form) return false;
            let isValid = true;

            const pageData = questionnaireStructure[step - 1];
            pageData.sections.forEach(section => {
                section.questions.forEach(q => {
                    if (!q.required) return;

                    let questionIsValid = false;
                    const element = form.querySelector(`[data-question-id="${q.id}"]`);

                    switch (q.type) {
                        case 'text':
                        case 'email':
                        case 'tel':
                        case 'date':
                        case 'number':
                        case 'textarea':
                            const input = form.querySelector(`#${q.id}`);
                            if (input && input.value.trim() !== '') {
                                questionIsValid = true;
                            }
                            break;
                        case 'radio':
                            const radioChecked = form.querySelector(`input[name="${q.id}"]:checked`);
                            if (radioChecked) {
                                questionIsValid = true;
                                if (q.hasOther && (radioChecked.value.toLowerCase().includes('outro') || radioChecked.value.toLowerCase().includes('outra'))) {
                                    const otherText = form.querySelector(`#${q.id}-other-text`);
                                    if (!otherText || otherText.value.trim() === '') {
                                        questionIsValid = false;
                                    }
                                }
                            }
                            break;
                        case 'checkbox':
                            const checkboxes = form.querySelectorAll(`input[name="${q.id}"]:checked`);
                            if (checkboxes.length > 0) {
                                questionIsValid = true;
                                if (q.mustCheckAll && checkboxes.length !== q.options.length) {
                                    questionIsValid = false;
                                }
                                if (q.maxSelection && checkboxes.length > q.maxSelection) {
                                    showNotification(`Para "${q.label}", selecione no máximo ${q.maxSelection} opções.`, 'error');
                                    questionIsValid = false;
                                }
                                if (q.hasOther) {
                                    const otherCheckbox = Array.from(checkboxes).find(cb => cb.value.toLowerCase().includes('outra') || cb.value.toLowerCase().includes('outros'));
                                    if (otherCheckbox) {
                                        const otherText = form.querySelector(`#${q.id}-other-text`);
                                        if (!otherText || otherText.value.trim() === '') {
                                            questionIsValid = false;
                                        }
                                    }
                                }
                            }
                            break;
                    }

                    if (!questionIsValid) {
                        isValid = false;
                        element.style.border = '1px solid var(--color-error)';
                        element.style.borderRadius = 'var(--radius-base)';
                        element.style.padding = '1rem';
                    } else {
                        element.style.border = 'none';
                        element.style.padding = '0';
                    }
                });
            });

            return isValid;
        }

        function saveFormData(step) {
            const form = document.getElementById(`form-step-${step}`);
            const pageData = questionnaireStructure[step - 1];
            pageData.sections.forEach(section => {
                section.questions.forEach(q => {
                    let value;
                    switch (q.type) {
                        case 'text':
                        case 'email':
                        case 'tel':
                        case 'date':
                        case 'number':
                        case 'textarea':
                            formData[q.id] = form.querySelector(`#${q.id}`).value;
                            break;
                        case 'radio':
                            const radioChecked = form.querySelector(`input[name="${q.id}"]:checked`);
                            if (radioChecked) {
                                value = radioChecked.value;
                                if (q.hasOther && (value.toLowerCase().includes('outro') || value.toLowerCase().includes('outra'))) {
                                    const otherText = form.querySelector(`#${q.id}-other-text`).value.trim();
                                    value = otherText ? `${value.replace(' (especificar):', '')}: ${otherText}` : value;
                                }
                                formData[q.id] = value;
                            }
                            break;
                        case 'checkbox':
                            const checkedBoxes = form.querySelectorAll(`input[name="${q.id}"]:checked`);
                            const values = Array.from(checkedBoxes).map(cb => {
                                let cbValue = cb.value;
                                if (q.hasOther && (cbValue.toLowerCase().includes('outro') || cbValue.toLowerCase().includes('outra') || cbValue.toLowerCase().includes('outros'))) {
                                    const otherText = form.querySelector(`#${q.id}-other-text`).value.trim();
                                    cbValue = otherText ? `${cbValue.replace(' (especificar):', '').replace('s (especificar):', '')}: ${otherText}` : cbValue;
                                }
                                return cbValue;
                            });
                            formData[q.id] = values;
                            break;
                    }
                });
            });
        }

        function restoreFormData(step) {
            const form = document.getElementById(`form-step-${step}`);
            const pageData = questionnaireStructure[step - 1];
            pageData.sections.forEach(section => {
                section.questions.forEach(q => {
                    const value = formData[q.id];
                    if (value === undefined) return;

                    switch (q.type) {
                        case 'text':
                        case 'email':
                        case 'tel':
                        case 'date':
                        case 'number':
                        case 'textarea':
                            form.querySelector(`#${q.id}`).value = value;
                            break;
                        case 'radio':
                            let radio = form.querySelector(`input[name="${q.id}"][value="${value}"]`);
                            if (!radio && q.hasOther) {
                                const options = form.querySelectorAll(`input[name="${q.id}"]`);
                                radio = options[options.length - 1];
                                if (radio && (radio.value.toLowerCase().includes('outro') || radio.value.toLowerCase().includes('outra'))) {
                                    const separatorIndex = value.indexOf(': ');
                                    if (separatorIndex > -1) {
                                        const customText = value.substring(separatorIndex + 2);
                                        form.querySelector(`#${q.id}-other-text`).value = customText;
                                    }
                                }
                            }
                            if (radio) radio.checked = true;
                            break;
                        case 'checkbox':
                            if (Array.isArray(value)) {
                                value.forEach(val => {
                                    let checkbox = form.querySelector(`input[name="${q.id}"][value="${val}"]`);
                                    if (!checkbox && q.hasOther) {
                                        const separatorIndex = val.indexOf(': ');
                                        if (separatorIndex > -1) {
                                            const options = form.querySelectorAll(`input[name="${q.id}"]`);
                                            const otherCb = Array.from(options).find(opt => opt.value.toLowerCase().includes('outra') || opt.value.toLowerCase().includes('outros'));
                                            if (otherCb) {
                                                checkbox = otherCb;
                                                const customText = val.substring(separatorIndex + 2);
                                                form.querySelector(`#${q.id}-other-text`).value = customText;
                                            }
                                        }
                                    }
                                    if (checkbox) checkbox.checked = true;
                                });
                            }
                            break;
                    }
                });
            });
        }

        function setupOtherInputListeners(step) {
            const form = document.getElementById(`form-step-${step}`);
            if (!form) return;

            const pageData = questionnaireStructure[step - 1];
            const questionsWithOther = pageData.sections
                .flatMap(s => s.questions)
                .filter(q => q.hasOther);

            questionsWithOther.forEach(q => {
                const otherContainer = form.querySelector(`#${q.id}-other-container`);
                if (!otherContainer) return;

                const inputs = form.querySelectorAll(`input[name="${q.id}"]`);
                inputs.forEach(input => {
                    input.addEventListener('change', () => {
                        let showOther = false;
                        if (input.type === 'radio') {
                            const selectedRadio = form.querySelector(`input[name="${q.id}"]:checked`);
                            if (selectedRadio && (selectedRadio.value.toLowerCase().includes('outro') || selectedRadio.value.toLowerCase().includes('outra'))) {
                                showOther = true;
                            }
                        } else if (input.type === 'checkbox') {
                            const otherCheckbox = Array.from(inputs).find(cb => (cb.value.toLowerCase().includes('outro') || cb.value.toLowerCase().includes('outra') || cb.value.toLowerCase().includes('outros')));
                            if (otherCheckbox && otherCheckbox.checked) {
                                showOther = true;
                            }
                        }

                        if (showOther) {
                            otherContainer.classList.add('visible');
                        } else {
                            otherContainer.classList.remove('visible');
                        }
                    });
                });
                // Check state on load
                let shouldShowOnLoad = false;
                const checkedInputs = form.querySelectorAll(`input[name="${q.id}"]:checked`);
                checkedInputs.forEach(checkedInput => {
                    if (checkedInput && (checkedInput.value.toLowerCase().includes('outro') || checkedInput.value.toLowerCase().includes('outra') || checkedInput.value.toLowerCase().includes('outros'))) {
                        shouldShowOnLoad = true;
                    }
                });

                if (shouldShowOnLoad) {
                    otherContainer.classList.add('visible');
                }

            });
        }

        function submitForm() {
            if (!validateStep(currentStep)) {
                showNotification('Por favor, preencha todos os campos obrigatórios (*).', 'error');
                return;
            }
            saveFormData(currentStep);

            const submissionData = { ...formData, timestamp: new Date().toISOString() };
            // Flatten arrays for easier sheet import
            for (const key in submissionData) {
                if (Array.isArray(submissionData[key])) {
                    submissionData[key] = submissionData[key].join('; ');
                }
            }

            console.log("Dados prontos para envio:", submissionData);

            // URL INTEGRADA CORRETAMENTE
            const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbxV0FjWpXQFSJmOIARGrqJdNIHyOqTiFpG-ASGRSLF6iKkFGqk5T_UagnFteQvgZl8k5w/exec';

            const submitButton = document.querySelector(`#form-step-${totalSteps} .btn-next`);
            submitButton.disabled = true;
            submitButton.innerHTML = 'Enviando... <i class="fas fa-spinner fa-spin"></i>';

            fetch(SCRIPT_URL, {
                method: 'POST',
                mode: 'no-cors', // IMPORTANTE PARA EVITAR ERRO DE REDIRECIONAMENTO/CORS
                cache: 'no-cache',
                headers: { 'Content-Type': 'text/plain;charset=utf-8' }, // IMPORTANTE
                body: JSON.stringify(submissionData),
            })
                .then(() => {
                    // Sucesso "Opaque": Não podemos ler o JSON de resposta, mas se chegou aqui, não houve erro de rede.
                    showNotification('Diagnóstico enviado com sucesso!', 'success');
                    goToStep('next-steps');
                    submitButton.disabled = false;
                })
                .catch(error => {
                    console.error('Erro:', error);
                    showNotification(`Erro ao enviar: ${error.message}. Tente novamente.`, 'error');
                    submitButton.disabled = false;
                    submitButton.innerHTML = 'Enviar Diagnóstico <i class="fas fa-paper-plane"></i>';
                });
        }

        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => notification.classList.add('show'), 100);

            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => document.body.removeChild(notification), 300);
            }, 4000);
        }
    </script>
</body>

</html>
